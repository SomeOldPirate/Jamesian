<header class="cd-sheet-header npc-header">
	<input
		class="charname"
		name="name"
		type="text"
		value="{{actor.name}}"
		placeholder="{{localize 'jamesian.ActorName'}}"
	/>
	<img
		class="profile-img"
		src="{{actor.img}}"
		alt="{{actor.name}}"
		title="{{actor.name}}"
		data-edit="img"
		data-action="onEditImage"
		data-tooltip="{{actor.name}}"
	/>
	<textarea
		class="sub-header-fields"
		name="system.looks"
		type="text"
		value="{{system.looks}}"
		placeholder="{{localize 'jamesian.LooksNpcInput'}}"
	>{{system.looks}}</textarea>
	<textarea
		class="sub-header-fields"
		name="system.behaviors"
		type="text"
		value="{{system.behaviors}}"
		placeholder="{{localize 'jamesian.BehaviorsNpcInput'}}"
	>{{system.behaviors}}</textarea>
	<textarea
		class="sub-header-fields"
		name="system.motivations"
		type="text"
		value="{{system.motivations}}"
		placeholder="{{localize 'jamesian.MotivationsNpcInput'}}"
	>{{system.motivations}}</textarea>

	<h2>{{localize "jamesian.Tabs.notes"}}</h2>
</header>